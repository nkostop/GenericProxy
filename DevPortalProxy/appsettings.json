{
	"SqlConfigurationProvider": {
		"ConnectionStringName": "appSettings",
		"ApplicationNames": [ "BigDataClient" ]
	},
	"AllowedHosts": "*",
	"Logging": {
		"EventViewer": {
			"LogLevel": "Information",
			"SourceName": "esignProxy",
			"LogName": "esignProxy"
		},
		"IncludeScopes": false,
		"Console": {
			"LogLevel": {
				"Default": "Warning",
				"System": "Information",
				"Microsoft": "Information"
			}
		},
		"TraceLevel": "0"
	},

	"IPInspector": {
		//"ConnectionStringName": "GeoLocation",
		"CountriesBlackList": []
	},
	"RequestTransform": {
		"TransformationMappers": {
			"header.userId": {
				"SourcePath": "employee_code",
				"Source": "Claim",
				"DefaultValue": "",
				"Action": "Create"
			}
		}
	},

	"ProxyMiddleware": {
		"ExceptionHandling": {
			"HideExceptions": false // Set to true in production
		},
		"UniqueMessageId": {
			"Enabled": false
		},
		"Modules": {
			"Authorization": "default",
			"Audit": "default"
		},
		"ReverseProxy": {
			"HttpClientName": "default"
		},
		"Routes": [
			{
				"Local": "/",
				"Remote": "{coreServiceUrl}/",
        		"Audit": false, // Set to true in production
        		"Validate": true // Set to true in production
			},
			{
				"Local": "/health",
				"Audit": false,
				"Validate": false
			}
		]
	}
}